---
import 'open-props/sizes.min.css'

const { frontmatter } = Astro.props
const title = frontmatter ? frontmatter.title : ''
---

<style lang="scss">
    .container {
        display: flex;
        margin-right: var(--size-fluid-3);
        margin-left: var(--size-fluid-3);

        @media (min-width: 800px) {
            margin-right: var(--size-fluid-5);
            margin-left: var(--size-fluid-5);
        }

        @media (min-width: 1200px) {
            margin-right: var(--size-fluid-7);
            margin-left: var(--size-fluid-7);
        }

        @media (min-width: 1440px) {
            margin-right: var(--size-fluid-9);
            margin-left: var(--size-fluid-9);
        }
    }
</style>
<section class="container">
    <slot />
</section>
